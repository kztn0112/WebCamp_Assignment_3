<h2>New book</h2>
<%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <h4>Title</h4>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
   <h4>Opinion</h4>
  <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' ,class:"btn btn-secondary" %>
<% end %>